{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es2016",
    "module": "es2015",
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": ["es2015", "es2016", "dom"],
    "outDir": "lib",
    "declaration": true
  },
  "include": [
      "**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
